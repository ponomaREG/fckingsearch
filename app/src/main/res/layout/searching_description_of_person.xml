<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/descriptionOfPerson_avatar"
        android:layout_margin="5dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/descriptionOfPerson_container_fio"
        android:layout_below="@id/descriptionOfPerson_avatar"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ФИО:"
            android:textColor="@android:color/black"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/descriptionOfPerson_container_fio_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptionOfPerson_container_birthday"
        android:layout_below="@id/descriptionOfPerson_container_fio"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Дата рождения:"
            android:textColor="@android:color/black"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/descriptionOfPerson_container_birthday_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
           />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/descriptionOfPerson_container_email"
        android:layout_below="@id/descriptionOfPerson_container_birthday"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Email:"
            android:textColor="@android:color/black"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/descriptionOfPerson_container_email_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptionOfPerson_container_passport"
        android:layout_below="@id/descriptionOfPerson_container_email"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Паспорт:"
            android:textColor="@android:color/black"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/descriptionOfPerson_container_passport_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:textAlignment="center" />
    </LinearLayout>

    <Button
        android:id="@+id/descriptionOfPerson_buttonFindInVk"
        android:layout_margin="25dp"
        android:layout_below="@id/descriptionOfPerson_container_passport"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Найти в ВК"/>
</RelativeLayout>